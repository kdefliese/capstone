<%= form_for @meal, :html => {:class => "form-inline"} do |f| %>
  <fieldset>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :category %>
    <%= f.text_field :category %>
    <%= f.label :foods_list %>
    <%= f.text_field :foods_list %>
    <%= f.label :ingredients_list %>
    <%= f.text_field :ingredients_list %>
    <%= f.submit value: "Create new meal", class: "new_button"%>
  </fieldset>
<% end %>
