<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <% @meals.each do |m| %>
        <%= m.name %>
        <br />
        <% if !m.foods.empty? %>
          <% m.foods.each do |f| %>
            <%= f.name %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
