<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Profile</h1>
      <p>
        Welcome, <%= @user.name %>!
      </p>
      <% if @user.image? %>
      <img src="<%= @user.image %>" />
      <% end %>
      <div class="profile-edit-button">
        <%= link_to "Edit Profile", edit_user_path(@current_user), method: :get, class: "btn btn-default" %>
      </div>
    </div>
  </div>
</div>
