<div class="container">
  <div class="row">
    <div class="col-md-12 text-center">
      <%= link_to "<", day_path(@day.id - 1), method: :get, class: "btn btn-default calendar-day" %>
      <h1 class="day-show-header"><%= @day.day.strftime("%A, %b %d") %></h1>
      <%= link_to ">", day_path(@day.id + 1), method: :get, class: "btn btn-default calendar-day" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 text-center">
      <h3>
        Today's Food Entries:
      </h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div id="existing-entries">
        <% @entries.each do |e| %>
          <div class="entry text-center" id="<%= e.time.strftime("%l:%M %p") %>">
            <div class="food-entry-header"><%= e.time.strftime("%l:%M %p") %> - <%= e.category.upcase %></div>
              <% e.meals.each do |m| %>
                <div class="meal">
                  <%= m.name %>
                </div>
              <% end %>
              <% e.foods.each do |f| %>
                <div class="food">
                  <%= f.name %>
                </div>
              <% end %>
              <% e.ingredients.each do |i| %>
                <div class="ingredient">
                  <%= i.name %>
                </div>
              <% end %>
            Notes: <%= e.notes %>
            <br />
            <%= link_to "Edit entry", entry_path(e), method: :patch, class: "btn btn-success edit-entry" %>
            <%= link_to "Remove entry", entry_path(e), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
          </div>
        <% end %>
      </div>
      <div id="added-entries">
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 text-center">
      <h3>Today's Symptoms:</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 text-center">
      <div id="existing-symptoms">
        <% @symptoms.each do |s| %>
        <div class="symptom">
          <%= s.name %>
          <br />
          <%= s.severity %>
          <br />
          <%= s.start_time %>
          <br />
          <%= s.end_time %>
          <br />
          <%= s.notes %>
        </div>
        <% end %>
      </div>
      <div id="added-symptoms">
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= render 'entries/add' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <h3>In this entry:</h3>
      <div id="print-new-entry">
       <!-- JS will fill this in -->
      </div>
      <button id="create-food-entry" class="btn btn-success">Add food entry</button>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= render 'symptoms/add' %>
    </div>
  </div>
</div>
