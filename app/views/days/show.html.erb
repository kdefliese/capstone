<h1><%= @day.day %></h1>
<p>
  Eaten today:
</p>
<% @entries.each do |e| %>
  <%= e.category %>
  <br />
  <%= e.time %>
  <br />
  <%= e.notes %>
  <br />
    <% e.meals.each do |m| %>
      <%= m.name %>
    <% end %>
    <br />
<% end %>

<%= form_for @entry, :html => {:class => "form-inline"} do |f| %>
    <select>
      <option value="Breakfast">Breakfast</option>
      <option value="Lunch">Lunch</option>
      <option value="Dinner">Dinner</option>
      <option value="Snack">Snack</option>
    </select>
    <select id="food-type-select">
      <option value="Foods" selected="selected">Foods</option>
      <option value="Ingredients" selected="selected">Ingredients</option>
      <option value="Meals" selected="selected">Meals</option>
    </select>
    <select id="dynamic-food-list">
      <% @all_meals.each do |m| %>
        <option value="<%= m.name %>" selected="selected"><%= m.name %></option>
      <% end %>
    </select>
    <%= f.label :notes %>
    <%= f.text_field :notes %>
    <%= f.submit value: "Add food to entry", class: "new_button", id: "add-to-entry" %>
<% end %>

<p>
  In this entry:
</p>

<button id="create-food-entry">Submit food entry</button>
